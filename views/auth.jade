extends layout

block content
    .page-title
        h1= title
        if error != ''
            h2= error

    form.auth-form(name="auth_form" action="/auth", method="POST")

        p
            label Email
            input(type="email", name="email", placeholder='Your email', required)
        p
            label Password
            input(type="password", name="password", placeholder='Your password', required, pattern=".{5,}")
        input(type="submit", value="Sign In")

        a(href="/register") Register